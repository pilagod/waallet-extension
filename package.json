{
  "name": "waallet-extension",
  "displayName": "Waallet Extension",
  "version": "0.0.0",
  "description": "Browser extension for account abstraction",
  "scripts": {
    "dev": "plasmo dev --env .env.development",
    "build": "plasmo build",
    "lint": "tsc --noEmit",
    "test": "jest -i",
    "format": "prettier --write .",
    "clear": "rm -r .plasmo/ && rm -r build/",
    "execute": "ts-node -r tsconfig-paths/register"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.9.3",
    "@simplewebauthn/browser": "^8.3.4",
    "@simplewebauthn/server": "^8.3.5",
    "@simplewebauthn/typescript-types": "^8.3.4",
    "@ungap/structured-clone": "^1.2.0",
    "ethers": "^6.8.1",
    "immer": "^10.0.4",
    "isomorphic-fetch": "^3.0.0",
    "json-bigint": "^1.0.0",
    "plasmo": "^0.85.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "use-cls-state": "^0.0.3",
    "use-deep-compare-effect": "^1.8.1",
    "uuid": "^9.0.1",
    "webextension-polyfill": "^0.10.0",
    "wouter": "^3.0.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@noble/curves": "^1.3.0",
    "@types/chrome": "0.0.245",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jest": "^29.5.7",
    "@types/json-bigint": "^1.0.4",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@types/uuid": "^9.0.8",
    "@types/webextension-polyfill": "^0.10.6",
    "autoprefixer": "^10.4.16",
    "jest": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier": "3.0.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.2.2"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://localhost:*/*"
    ],
    "key": "$CRX_KEY"
  }
}
